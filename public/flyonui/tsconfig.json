{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "dist/js",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true
  },
  "include": ["src/js/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
